{
  "compilerOptions": {
    /* Language */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* Paths & base URL */
    "baseUrl": "./src",
    "paths": {
      "config/*": ["config/*"],
      "controllers/*": ["controllers/*"],
      "middlewares/*": ["middlewares/*"],
      "routes/*": ["routes/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    },

    /* Interop & quality */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,

    /* Output */
    "outDir": "dist",
    "sourceMap": true,
    "noEmit": true,

    /* Allow JS files but not required */
    "allowJs": false,
    "resolveJsonModule": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
