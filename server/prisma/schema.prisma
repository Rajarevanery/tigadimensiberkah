generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  KARYAWAN
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  nama      String
  password  String
  role      Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wilayah        UserWilayah[]
  refreshTokens  RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  token     String   @unique

  userId    String   @db.Uuid   
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresAt DateTime
  createdAt DateTime @default(now())
}


model Wilayah {
  id           String         @id @default(uuid()) @db.Uuid
  nama_wilayah String @unique

  users        UserWilayah[]
}

model UserWilayah {
  userId     String   @db.Uuid
  wilayahId  String   @db.Uuid

  assignedAt DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wilayah    Wilayah  @relation(fields: [wilayahId], references: [id], onDelete: Cascade)

  @@id([userId, wilayahId])
  @@index([wilayahId])
  @@index([userId])
}
